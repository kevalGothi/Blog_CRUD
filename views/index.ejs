<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <h1>Blog Post</h1>
    <hr />
    <main>
      <% for(post of posts){ %>
      <div>
        <h2><%= post.title %></h2>
        <p><%= post.desc.substring(0, 10) %>....</p>
        <p>Author: <%= post.author %></p>
        <span>
          <a href="/post/<%= post.id %>">
            <button>Read More</button>
          </a>
          <form
            method="POST"
            class="buttons"
            action="/post/<%= post.id %>?_method=DELETE"
          >
            <button type="submit">Delete</button>
          </form>
        </span>
      </div>
      <hr />
      <% } %>
    </main>
    <span style="width: 50%">
      <button onclick="display_form()">Add New Post</button>
    </span>
    <div class="forms-container">
      <div class="form">
        <span class="close" onclick="form.style.display='none'">X</span>
        <h2>Add a new post</h2>
        <form action="/posts" method="POST">
          <input type="text" name="title" placeholder="Title" required />
          <br />
          <textarea
            name="desc"
            id=""
            cols="30"
            rows="10"
            placeholder="Description"
            required
          ></textarea>
          <br />
          <input type="text" name="author" placeholder="Author" required />
          <br />
          <button type="submit">Add Post</button>
        </form>
      </div>
    </div>
    <script>
      const form = document.querySelector(".forms-container");
      function display_form() {
        form.style.display = "flex";
      }
    </script>
  </body>
</html>
